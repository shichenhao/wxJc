<view class="container">
  <view class='addressList' wx:key="id" wx:for="{{dataList}}" data-item='{{item}}' bindtap='backOrder'>
    <view class='addressItem'>
      <view class='span'>
        {{item.name}} {{item.gender}} {{item.mobile}}
      </view>
      <view class='span'>
        {{item.address}}
      </view>
      <image src='/lib/images/adress_06.png' data-item='{{item}}' bindtap='addAddress'></image>
    </view>
  </view>
  <view bindtap='addAddress' class='addressAdd'>
    <image src='/lib/images/add.png'></image>
    新增地址
  </view>

</view>