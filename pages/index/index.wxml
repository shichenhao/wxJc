<view class="container">
  <view class="home_ban">
    <view class='banner'>
      <image wx:for="{{banner}}" src='{{item.image}}' wx:key="item.index" mode="widthFix"></image>
    </view>
    <view class='home_addr' bindtap='getMap'>
      <image src='/lib/images/home_banicon2.jpg' class="home_addr_img1"></image>
      <text>{{mapXY}}</text>
       <image src='/lib/images/home_banicon3.jpg' class="home_addr_img2"></image>
    </view>
    <navigator class='home_seach' url='/pages/search/search' hover-class='none'>
       <image src='/lib/images/home_banicon1.jpg'></image>
       瓷砖
    </navigator>
  </view>
  <view class='home_iconlist'>
    <view><image src='/lib/images/home_icon1.png'></image>品牌授权</view>
    <view><image src='/lib/images/home_icon2.png'></image>假一罚十</view>
    <view><image src='/lib/images/home_icon3.png'></image>7天退换货</view>
    <view><image src='/lib/images/home_icon4.png'></image>保价一年</view>
  </view>
  <view class='home_main'>
    <view class='home_nav'>
      <view><image src='/lib/images/home_icon5.jpg'></image>全场返现</view>
      <view><image src='/lib/images/home_icon6.jpg'></image>优惠券</view>
      <view><image src='/lib/images/home_icon7.jpg'></image>联单奖励</view>
      <view><image src='/lib/images/home_icon8.jpg'></image>优质服务</view>
    </view>
    <view class='home_gg'>
      <image src='/lib/images/home_pic1.jpg' mode="widthFix"></image>
    </view>
  </view>
  <!--家具-->
  <view class='home_show' wx:for="{{list}}" wx:key="item.id">
    <view class='home_show_tit  color{{item.nameType}}'><view><text>{{item.name}} · </text>馆</view><text class='home_showAB'>Living Furniture</text></view>
    <view class='home_Hotpic'>
      <navigator wx:if="{{item.type==2}}" url='/pages/commodityDetails/commodityDetails?id={{item.goods.id}}' class='home_picT' hover-class="none">
        <image src='{{item.image}}' mode="widthFix"></image>
      </navigator>
      <navigator wx:if="{{item.type==1}}" url='/pages/sellerHome/sellerHome?id={{item.merchant.id}}' class='home_picT' hover-class="none">
       <image src='{{item.image}}' mode="widthFix"></image>
      </navigator>
    </view>
    <view class='home_show_list clearfix'>
      <navigator url='/pages/commodityDetails/commodityDetails?id={{item.id}}' class='home_picT' hover-class="none" wx:for="{{item.locationList}}" wx:for-item="i" wx:key="{{i.index}}">
        <image src='/lib/images/home_pic2.jpg' mode="widthFix"></image>
        <view class='home_picTtext'>
          <text class='home_picTtit'>{{i.goods.goodsName}}</text>
          <view class='home_picTbot'>
            <text class='home_picT20'>¥</text><text class='home_picT30'>{{i.goods.modelList[0].discountPrice}}</text><text class="home_picTbotY">市场价:{{i.goods.modelList[0].originalPrice}}</text>
          </view>
        </view>
      </navigator>
    </view>
  </view>
   <!--热销榜单-->
  <view class='home_hot'>
    <image src='/lib/images/home_pic6.jpg' mode="widthFix" class='home_hotbg'></image>
    <view class='home_hottit'>
      <image src='/lib/images/home_icon9.png' mode="widthFix"></image>热销榜单
    </view>
    <view class='home_hotlistBox clearfix'>
      <navigator url='/pages/commodityDetails/commodityDetails?id={{item.id}}' class='home_hotlist' hover-class="none" wx:for="{{hotList}}" wx:key="{{item.index}}">
        <image src='/lib/images/home_pic7.jpg' mode="widthFix" class='home_listPic'></image>
        <view class='home_hotlistF'>
          <image src='/lib/images/home_icon10.png' mode="widthFix" class='home_hotlistF_icon1'></image>
          <text class='home_hotlistF_tit'>北欧实木书架组合</text>
          <view><text class='home_hotlistjq'>已售1600</text><text>¥</text>650</view>
        </view>
      </navigator>
    </view>
  </view>
  <!--推荐榜单-->
  <view class='home_Recom'>
    <view class='home_Recom_tit' style="background:url(/lib/images/home_pic8.jpg) no-repeat;background-size:100%">
      推荐榜单
    </view>
      <scroll-view scroll-x  style="width: 100%">
        <view class='scroll-view_H'>
          <block>
            <navigator url='/pages/commodityDetails/commodityDetails?id={{item.id}}' wx:for="{{major}}" wx:key="{{item.id}}"><image src="{{item.merchantImage}}" mode="widthFix"></image></navigator>
          </block>
        </view>
      </scroll-view>
  </view>
  <!--好货推荐-->
  <view class='home_goodRecom'>
    <view class='home_Recom_tit'>
      好货推荐
    </view>
    <!--list-->
    <view class='home_goodR_list' wx:for="{{good}}" wx:key="item.index">
      <view class='home_goodR_pic'>
         <navigator url='/pages/commodityDetails/commodityDetails?id={{item.id}}'><image src='{{item.goodsImage}}' mode="widthFix"></image></navigator>
         <navigator url='/pages/sellerHome/sellerHome?id={{item.buildingMaterialsMerchant.id}}' class='home_goodR_brand'>
            <image src='{{item.buildingMaterialsMerchant.logo}}' mode="widthFix"></image>
            {{item.buildingMaterialsMerchant.name}}
         </navigator>
      </view>
      <view class='home_goodR_price'>
        <text class='price1'><text>¥</text>{{item.buildingMaterialsGoods.modelList[0].originalPrice}}</text>  <text class='price2' wx:if="{{item.buildingMaterialsGoods.modelList[0].BigDecimal}}">马管家补贴<text>{{item.buildingMaterialsGoods.modelList[0].BigDecimal}}元</text></text>
      </view>
      <view class='home_goodR_tit'>
          <text wx:if="{{item.buildingMaterialsGoods.modelList[0].BigDecimal}}">补贴</text> {{item.buildingMaterialsGoods.goodsName}}
      </view>
      <view class='home_goodR_text'>
        {{item.recommendReason}}
      </view>
    </view>
  </view>
  <view class='redBagCount {{isLogin ? "active" : ""}}' wx:if="{{redType}}">
    <view class='redBagCountBox'>
      <view class='money'>
        <text>50</text>元
        <view>
          无门槛红包
        </view>
      </view>
      <navigator url="/pages/user-login/index" class='span' wx:if="{{!isLogin}}" hover-class="none">立即登录，领取红包</navigator>
      <navigator url="/pages/user-envelopes/envelopes" class='span' wx:if="{{isLogin}}" hover-class="none">立即使用</navigator>
      <view class='p'>
        可在“我的钱包”中查看详情
      </view>
      <view class='close' bindtap="closeRed">✖</view>
    </view>
  </view>
</view>