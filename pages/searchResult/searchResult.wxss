/* pages/classifyDetaile/classifyDetaile.wxss */

.searchBox{
  padding: 0 40rpx;
  padding-bottom:20rpx;
  position: relative;
  background: #fff;
}
#search{
  height:60rpx;
  line-height: 60rpx;
  background: #ececec;
  border-radius: 30rpx;
  padding-left:84rpx;
  color:#888;
}
.searchIcon{
  width:20rpx;
  position: absolute;
  left:75rpx;
  top:20rpx;
}

.list{
  padding:30rpx;
  background: #fff;
  margin-bottom:20rpx;
  overflow: hidden;
}
.brand{
  height:100rpx;
  overflow: hidden;
}
.brandL{
  float:left;
  padding-top:20rpx;
  margin-right:20rpx;
}
.brandL image{
  max-width: 92rpx;
}
.brandRight{
  float:left;
}
.brandRightUp{
  font-size:34rpx;
  font-weight: bold;
}
.brandRightDown image{
  width:23rpx;
}

.itemBox{
  height: 397rpx;
  display: flex;
  flex-direction: row;
  overflow-x: auto;
}
.item{
  width:240rpx;
  float:left;
  padding-bottom:40rpx;
  margin-right:20rpx;
}
.imgBox{
  width:240rpx;
  height:240rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.imgBox .commodityImg{
  width:100%;
  height:100%;
}
.imgBox .leftTop{
  position: absolute;
  left:0;
  top:0;
  width:54rpx;
  height:54rpx;
}
.leftTopBg{
  width:100%;
  height:100%;
}
.leftTop text{
  color:#fff;
  font-size:24rpx;
  position: absolute;
  left:3px;
}


.title{
  font-size:24rpx;
  color:#191919;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; 
  height:75rpx;
  padding-top:12rpx;
}
.commodityInfo{
  overflow: hidden;
}
.price{
  font-size:22rpx;
  color:#e51f1f;
  float:left;
  font-weight: bold;
}
.salesVolume{
  float:right;
  font-size:16rpx;
  color:#666;
}
.nothingCommodity{
  text-align: center;
}
.nothingCommodity image{
  margin-top:400rpx;
  width:243rpx;
  height:195rpx;
}