/* pages/classify/classify.wxss */
.box{
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  background: #fff;
}
.main{
  padding-bottom:98rpx;
}
.searchBox{
  padding-bottom:20rpx;
  margin: 0 40rpx;
  position: relative;
}
#search{
  height:60rpx;
  line-height: 60rpx;
  background: #ececec;
  border-radius: 30rpx;
  padding-left:84rpx;
  color:#888;
}
.searchIcon{
  width:20rpx;
  position: absolute;
  left:34rpx;
  top:20rpx;
}

.main{
  background: #fff;
  display: flex;
}
.left{
  width:194rpx;
  border-right:20rpx solid #f3f3f3;
}
.leftList{
  text-align: center;
  height:99rpx;
  line-height: 99rpx;
  color:#333;
  font-size:28rpx;
  border-bottom:1rpx solid #e4e4e4;
  border-left:6px solid #fff;  
}
.leftCur{
  color:#eb4245;
  background: #f3f3f3;
  border-left:6px solid #eb4245;  
}

.right{
  flex:1;
  border-top:20rpx solid #f3f3f3;
  background: #f3f3f3;
  border-right:20rpx solid #f3f3f3;
}
.hot,.classify{
  border-bottom:20rpx solid #f3f3f3;
  background: #fff;
}
.h2{
  width:268rpx;
  height:104rpx;
  line-height: 104rpx;
  position: relative;
  margin:0 auto;
}
.h2::before{
  content:'';
  position: absolute;
  top:50rpx;
  height:1px;
  width:100%;
  background: #c4c2c2;
}
.title{
  width:148rpx;
  text-align: center;
  font-size:24rpx;
  background: #fff;
  margin:0 auto;
  position: relative;
}
.hotCon{
  overflow: hidden;
}
.hotList{
  width: 130rpx;
  height:130rpx;
  margin-left:30rpx;
  float:left;
  display: flex;
  align-items: center;
  justify-content: center;
  }
.hotList image{
  max-width:115rpx;
  max-height:70rpx;
}

.classifyCon{
  overflow: hidden;
}
.classifyList{
  width:130rpx;
  margin-left:30rpx;
  margin-bottom:30rpx;
  float:left;
}
.classifyList .classifyImg{
  width:130rpx;
  height:130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.classifyList image{
  max-width:100%;
  max-height:100%;
}
.classifyName{
  font-size:21rpx;
  text-align: center;
  color:#333;
}