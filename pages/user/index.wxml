<view class="container">
  <view class='login userInfo'>
    <image src='/lib/images/logo.png'></image>
    <view class='b'>
      {{
        userInfo.name
      }}
      <view>
      {{
        userInfo.mobile
      }}</view>
    </view>
  </view>
  <view class='userMoney'>
    <view class='userMoneyRow'>
      <view class='b'>
        {{
          userInfo.balance || 0
        }}
        <view>元</view>
      </view>
      我的余额
    </view>
    <navigator class='userMoneyRow' url="/pages/user-envelopes/envelopes" hover-class="none">
      <view class='b'>
        {{
          userInfo.redBagCount || 0
        }}
        <view>个</view>
      </view>
      我的红包
    </navigator>
    <navigator class='userMoneyRow' url="/pages/user-coupon/coupon" hover-class="none">
      <view class='b'>
        {{
          userInfo.couponsCount || 0
        }}
        <view>个</view>
      </view>
      优惠券
    </navigator>
  </view>
  <view class='userMenu'>
    <navigator url="/pages/order/index" hover-class="none">
      <image src='/lib/images/user-icon1.png'></image>  
      我的订单
    </navigator>
    <navigator url="/pages/user-address/address" hover-class="none">
      <image src='/lib/images/user-icon2.png'></image>  
      收货地址
    </navigator>
    <navigator url="/pages/collection/collection" hover-class="none">
      <image src='/lib/images/user-icon3.png'></image>  
      我的收藏
    </navigator>
  </view>
  <view class='telephone'>
    <view class='b'>
      客服电话：400-000-0000
    </view>
  </view>
  <view class='logout'>
    退出登录
  </view>
</view>