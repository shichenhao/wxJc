/* pages/sellerHome/sellerHome.wxss */
.header{
  height:240rpx;
  background-size:100%;
}
.headerBg{
  background: rgba(0,0,0,.5);
  height:240rpx;
}
.headerTop{
  display: flex;
}
.headerTopL{
  flex:4;
  display: flex;
  margin-top:56rpx;
}
.logo{
  width:90rpx;
  height:90rpx;
  margin:0 18rpx;
}
.headerTopLR{
  flex:1;
  color:#fff;
}
.sellerName{
  font-size:30rpx;
  position: relative;
  display: inline-block;
}
.sellerName::after{
  content:"";
  position: absolute;
  width:16rpx;
  height:16rpx;
  border-right:2px solid #fff;
  border-bottom:2px solid #fff;
  transform: rotate(45deg);
  left:105%;
  top:8rpx;
}
.sellerInfo::after{
  transform: rotate(-135deg);
  top:18rpx;
}
.headerTopLR .text{
  font-size:20rpx;
  padding-top:15rpx;
}

.headerTopR{
  flex:2;
  margin-top:78rpx;
  text-align: right;
}
.collection{
  height:45rpx;
  border-radius: 20rpx;
  background: #ff5959;
  padding:0 20rpx;
  display: inline-block;
  font-size:24rpx;
  color:white;
  line-height: 45rpx;
  margin-right:40rpx;
}
.collection image{
  width:25rpx;
  height:25rpx;
}
.shareIcon{
  width:46rpx;
  height:46rpx;
  margin-right:20rpx;
  float:right;
}

.menu{
  line-height: 40rpx;
  display: flex;
  padding-top:20rpx;
}
.menuList{
  flex: 1;
  font-size:26rpx;
  color:white;
  text-align: center;
  margin:0 40rpx;
  line-height: 50rpx;
}
.menuCur{
  border-bottom:4rpx solid #fff;
}
.discount{
  height:100rpx;
  white-space: nowrap;
  padding-left:14rpx;
  padding-top:10rpx;
}
.discount image{
  width:223rpx;
  height:100rpx;
  margin-right:14rpx;
}

.main{
  padding:110rpx 22rpx 22rpx 22rpx;
}
.main image{
  width:100%;
}
.more{
  color:#999;
  font-size:26rpx;
  text-align: center;
  line-height: 90rpx;
}