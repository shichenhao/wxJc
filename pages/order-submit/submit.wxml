<view class="container">
  <view class='orderSubmitTit'>
    <view class='{{shipmentType == 1 ? "active" : "" }}' data-id='1' bindtap='changeType'>送货上门</view>
    <view class='{{shipmentType == 3 ? "active" : "" }}' data-id='3' bindtap='changeType'>到店自取</view>
  </view>
  <view class='adress' bindtap='changeAddress' wx:if="{{shipmentType == 1}}">
    <image src='/lib/images/adress.png'></image>
    <view class='b'>收货人：{{addressData.name}} {{addressData.mobile}}</view>
    <view>{{addressData.detailedAddress}}</view>
  </view>
  <view wx:if="{{shipmentType == 3}}">12312</view>
  <view class='h2'>
    商品信息
  </view>
  <view class='evaluateBox'>
    <view class='orderTitle'>
      <image src='{{orderItems.merchantLogo}}'></image>
      {{orderItems.merchantName}}
    </view>
    <view class='cartItemImg'>
      <view>
        共{{orderItems.buildingMaterialsOrderItemList.length}}件
      </view>
      <image wx:for="{{orderItems.buildingMaterialsOrderItemList}}" wx:for-item="son" wx:for-index="sonItem" wx:key="{{sonItem}}" src='{{son.img}}'></image>
    </view>
    <view class='div'>
      总价：
      <view>
        ￥
        <view class='b'>
          {{orderItems.totalGoodsPrice}}
        </view>
      </view>
    </view>
    <view class='remarks'>
      <view>
        订单备注
      </view>
      <input placeholder='如有问题请填写备注'></input>
    </view>
  </view>
  <view class='discount'>
    <view>
      配送费
      <view>￥{{shipmentType == 3 ? 0 : orderItems.practicalShippingFee}}</view>
    </view>
    <view>
      平台补贴
      <view>-￥{{orderItems.totalPlatformSubsidiesPrice}}</view>
    </view>
    <view bindtap='seeRedPacket'>
      平台红包
      <view>-￥{{!redPacketData.amt?0:redPacketData.amt}}</view>
    </view>
    <view bindtap='seeCashCoupon'>
      商家代金券
      <view>-￥{{!promotionCouponsData.couponsAmt?0:promotionCouponsData.couponsAmt}}</view>
    </view>
  </view>
  <view class='cartTotal'>
    <view>
      合计金额：
      <view class='span'>
        ￥
        <view class='b'>{{orderItems.totalGoodsPrice}}</view>
      </view>
    </view>
    <view class='payment' bindtap='orderSubmit'>提交订单</view>
  </view>



  
  <view class='moneyPop' wx:if="{{isRedPacket}}">
    <view class='moneyNone active' bindtap='noCashCoupon'>
      不使用红包
    </view>
    <view class="moneyBox" wx:for="{{redPacketData.platformRedBagList}}" data-record='item' wx:key="id">
      <view class='h2'>
        <view>可使用红包（{{redPacketData.platformRedBagList.length}}个）</view>
      </view>
      <view class='moneyItem'>
        <view class="itemLeft">
          <view class="b">专享红包</view>
          <view>有效期至{{item.expirationTime}}</view>
          <view>限收货人手机号{{item.mobile}}</view>
        </view>
        <view class="itemRight">
          <view>
            ￥<view class="b">{{item.amt}}</view>
          </view>
          {{item.restrictAmt==0?"无门槛红包":"满元"+item.restrictAmt+"可使用"}}
        </view>
      </view>
    </view>

    <view class="moneyBox moneyBox2" data-record='item' wx:for="{{redPacketData.platformRedBagAvailableList}}" wx:key="id" wx:for-index="index">
      <view class='h2'>
        <view>不可使用红包（{{redPacketData.platformRedBagAvailableList.length}}个）</view>
      </view>
      <view class='moneyItem'>
        <view class="itemLeft">
          <view class="b">专享红包</view>
          <view>有效期至{{item.expirationTime}}</view>
          <view>限收货人手机号{{item.mobile}}</view>
        </view>
        <view class="itemRight">
          <view>
            ￥<view class="b">{{item.amt}}</view>
          </view>
          {{item.restrictAmt==0?"无门槛红包":"满元"+item.restrictAmt+"可使用"}}
        </view>
        <view class="moneyWhy">
          <view class="span" bindtap='why' data-why="{index}}">
            不可用原因
          </view>
          <view class="div">
            <view wx:for="{{item.disableList}}" wx:key="id" wx:for-item="record">{{record}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>









  <view class='moneyPop moneyPop2' wx:if="{{isCashCoupon}}">
    <view class='moneyNone active' bindtap='noCashCoupon'>
      不使用优惠券
    </view>
    <view class="moneyBox" wx:for="{{cashCouponData.usableCouponsList}}" bindtap='getCashCoupon' data-record='{{item}}' wx:key="id">
      <view class='h2'>
        <view>可使用优惠券（{{cashCouponData.noUsableCouponsList.length}}个）</view>
      </view>
      <view class='moneyItem'>
        <view class="itemLeft">
          <image src='{{item.merchantLogo}}'></image>
          <view class="b">{{item.name}}</view>
          <view>满{{item.restrictAmt}}元可用</view>
        </view>
        <view class="itemRight">
          <view>
            ￥<view class="b">{{item.couponsAmt}}</view>
          </view>
        </view>
        <view class="moneyWhy p">
          有效期：{{item.expirationTime}}
        </view>
      </view>
    </view>

    <view class="moneyBox moneyBox2">
      <view class='h2'>
        <view>不可使用优惠券（{{cashCouponData.noUsableCouponsList.length}}个）</view>
      </view>
      <view class='moneyItem' wx:for="{{cashCouponData.noUsableCouponsList}}" wx:key="id" wx:for-index="index">
        <view class="itemLeft">
          <image src='{{item.merchantLogo}}'></image>
          <view class="b">{{item.name}}</view>
          <view>满{{item.restrictAmt}}元可用</view>
        </view>
        <view class="itemRight">
          <view>
            ￥<view class="b">{{item.couponsAmt}}</view>
          </view>
          无门槛红包
        </view>
        <view class="moneyWhy">
          <view class="span" bindtap='why' data-why="{{index}}">
            不可用原因
          </view>
          <view class="div" wx:if="{{item.isWhy}}">
            <view wx:for="{{item.noUsableWhy}}" wx:key="id" wx:for-item="record">{{record}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>




</view>
